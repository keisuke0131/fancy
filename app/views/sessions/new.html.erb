<div class="users-new-wrapper">
  <%= image_tag 'Fancy_logo_black.png'%>
  <div class="users-new-container">
    <%= form_with(url: login_path, scope: :session,local: true) do |f| %> 
      <div class="users-new-title">
        <h1>ログイン</h1>
      </div>
      <%= f.email_field :email, class: 'form-control', placeholder: "メールアドレス" ,id: 'session_email' %>
      <%= f.password_field :password, class: 'form-control', placeholder: "パスワード" ,id: 'session_password'%>
      <%= f.submit "ログイン", class: "btn btn-primary"%>
    <% end %>
  </div>
  <div class="users-new-btn">
    <%= link_to "新規登録はこちら",new_user_path %>
    <%= link_to "パスワードを忘れた場合", new_password_reset_path %>
  </div>
</div>